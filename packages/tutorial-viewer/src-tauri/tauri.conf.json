{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Tutorial Viewer",
  "version": "0.1.0",
  "identifier": "com.viswave.tutorialviewer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Tutorial Viewer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["tutorial"],
        "name": "Tutorial File",
        "description": "Tutorial Viewer Project File",
        "role": "Viewer",
        "mimeType": "application/x-tutorial"
      }
    ]
  },
  "plugins": {
    "cli": {
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true
        }
      ]
    }
  }
}
